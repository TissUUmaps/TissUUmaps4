{
  "name": "tissuumaps",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.2",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@microsoft/api-extractor": "^7.55.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.0.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "canvas": "^3.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "fmt": "prettier --write --ignore-unknown .",
    "fmt:check": "prettier --check --ignore-unknown .",
    "test": "vitest run --coverage",
    "dev": "pnpm run --filter tissuumaps dev",
    "docs": "pnpm run --filter docs start",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:apps": "pnpm run -r --filter \"./apps/**\" build",
    "build:packages": "pnpm run -r --filter \"./packages/**\" build",
    "clean": "rm -rf node_modules && pnpm run -r clean"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
